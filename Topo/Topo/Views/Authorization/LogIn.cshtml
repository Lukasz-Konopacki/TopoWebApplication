@model LogInViewModel

<section class="Login">
    <div class="container">
        <div class="row">
            <div class="col-8 col-lg-6 col-xl-5 mb-3 mt-5 mx-auto window">

                <h1 class="text-center mt-3">Logowanie</h1>
                <form method="post"  class="form-group m-0">
                    <label class="mb-0">E-mail</label><input class="form-control" type="email" asp-for="UserName" require>
                    <label class=" mb-1 mt-3">Hasło</label><input class="form-control" type="password" asp-for="Password" require>
                    <input class="col-lg-6 mt-3 mb-3 form-control" type="submit">
                </form>
                <div class="mt-3" id="validation" asp-validation-summary="All"></div>
                <a asp-action="Register"><h6 class="text-center">Załóż Konto</h6></a>
            </div>
        </div>
    </div>
</section>