@model IndexViewModel
<!--Carousel -->
<div class="container">
    <div class="row">
        <div class="col-12 mx-auto my-3  p-0">
            <div id="my-slider" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    <li data-target="#my-slider" data-slide-to="0" class="active"></li>
                    <li data-target="#my-slider" data-slide-to="1"></li>
                    <li data-target="#my-slider" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner" role="listbox">

                    <div class="carousel-item active">
                        <a asp-action="Region" asp-controller="Climbing" asp-route-id="@Model.Regions[0].Id">
                            <img class="d-block w-100" src="@Model.Regions[0].Photo.Url" alt="sokoliki">
                            <div class="carousel-caption">
                                <h3>@Model.Regions[0].Name</h3>
                            </div>
                        </a>
                    </div>

                    <div class="carousel-item">
                        <a asp-action="Region" asp-controller="Climbing" asp-route-id="@Model.Regions[1].Id">
                            <img class="d-block w-100" src="@Model.Regions[1].Photo.Url" alt="szczytnik">
                            <div class="carousel-caption">
                                <h3>@Model.Regions[1].Name</h3>
                            </div>
                        </a>
                    </div>

                    <div class="carousel-item">
                        <a asp-action="Region" asp-controller="Climbing" asp-route-id="@Model.Regions[2].Id">
                            <img class="d-block w-100" src="@Model.Regions[2].Photo.Url" alt="tatry">
                            <div class="carousel-caption">
                                <h3>@Model.Regions[2].Name</h3>
                            </div>
                        </a>
                    </div>

                    <a class="carousel-control-prev" href="#my-slider" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#my-slider" role="button" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Text banner -->
<div class="container">
    <div class="row">
        <div id="index-text" class="col-12 mt-2 pt-2 text-center text-light">
            <h2><i>Baw się dobrze. Pracuj ciężko. Stań się mądry. ...w tej i nie innej kolejności.</i> - <b>Jeff Lowe</b></h2>
            <p class="text-justify">
                &emsp; Strona ta jest efektem pracy wielu osób, powstała po to aby łatwiej dzielić się informacjami o różnych regionach wspinaczkowych.
                Wiekszość z miejsc opisanych tutaj znajduje się na terenach górskich i leśnych. Podczas odwiedzania tych pięknych miejsc pamiętać należy o paru ważnych zasadach.
                Nie zostawiaj po sobie śmieci, a jeśli masz taką możliwość zabierz również te pozostawione przez kogoś innego.
                Staraj się utrzymywać swoje rzeczy uporządkowane w jednym miejscu aby nie przeszkadzały innym turystom w przejściu.
                Staraj się również zachowywać cicho aby nie płoszyć zwierzyny występującej w okolicy. Mamy nadzieję, że dzięki naszej stronie przeżyjesz wiele wspaniałych wyjazdów.
            </p>
        </div>
    </div>
</div>

<!--Register Window-->
<section class="Register mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-1 col-1">

            </div>

            <div class="col-10 mt-4 mb-3 col-md-5 window">
                <h1>Zajerestruj się</h1>
                <form id="form-sub" asp-controller="authorization" asp-action="Register" class="form-group m-0" method="post">
                    <label class="mb-0">E-mail</label><input id="Email" asp-for="Email" class="form-control" type="email" required>
                    <span class="d-block" asp-validation-for="Email"></span>
                    <label class="mb-1">Hasło</label><input id="Password" asp-for="Password" class="form-control" type="password" required>
                    <span class="d-block" asp-validation-for="Password"></span>
                    <label class="mb-1">Powtórz hasło</label><input id="RepPassword" asp-for="RepPassword" class="form-control" type="password" required>
                    <span class="mb-1 d-block" asp-validation-for="RepPassword"></span>
                    <input class="form-control" type="submit">
                </form>
            </div>
            <div class="col-md-6 col-1">

            </div>
        </div>
    </div>
</section>

<footer>
    <div class="container col-12">
        <div class="row">
            <div class="col-12 text-center my-1">
                Zaprojektowane przez Łukasza Konopacakiego
            </div>      
        </div>
    </div>
</footer>

<script asp-append-version="true" src="~/js/Validation.js"></script>