@inject SignInManager<IdentityUser> SignInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Topo</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700&display=swap&subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/style.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/67d97e7797.js" crossorigin="anonymous"></script>
</head>
<body>

    <!--NavBar-->
    <nav class="navbar navbar-dark navbar-expand-lg">

        <a class="navbar-brand mr-4 text-center" asp-controller="Home" asp-action="Index"><i class="fas fa-map-marked-alt mr-2"></i>Topo</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainmenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainmenu">

            <form class=" form-inline mr-auto my-2 text-center">
                <input class="form-control " type="search" placeholder="Wyszukaj">
                <button class="btn btn-light d-none d-lg-inline " type="submit"><i class="fas fa-search"></i></button>
            </form>

            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" asp-action="Mapa" asp-controller="Home">Mapa</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Regions" asp-controller="Climbing">Regiony</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Kontakt" asp-controller="Home">Kontakt</a>
                </li>

                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        var UserName = User.Identity.Name.Substring(0, User.Identity.Name.IndexOf("@"));

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">Hi @UserName</a>

                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-action="Panel" asp-controller="Admin">Panel Administratora</a>
                                <a class="dropdown-item" href="#">...</a>
                                <a class="dropdown-item" href="#">...</a>
                                <a asp-controller="Authorization" asp-action="LogOut" class="dropdown-item">Wyloguj się</a>
                            </div>
                        </li>

                    }
                    else
                    {
                        <li>
                            <div class="text-center">
                                <a asp-action="LogIn" asp-controller="Authorization" class="btn my-2 ml-2" id="login">Zaloguj się</a>
                            </div>
                        </li>
                    }
                }
            </ul>

        </div>
    </nav>

    @RenderBody()

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>